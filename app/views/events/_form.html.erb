<%= simple_form_for [@club, @event] do |f| %>
  <%= f.input :kind do %>
    <%=
    f.select(
      :kind,
      Event.kinds.map { |kind, v| [Event.human_attribute_name("kind.#{kind}"), kind] },
      { prompt: 'Seleziona tipo' },
      class: 'form-control'
    )
    %>
  <% end %>
  <%= f.input :date_from %>
  <%= f.input :date_to, include_blank: true %>
  <%= f.input :time_from %>
  <%= f.input :time_to %>
  <%= f.input :all_day %>
  <%= f.association :groups, collection: @club.groups %>
  <%= f.select_recurring :recurring, nil, :allow_blank => true %>

  <%= f.submit 'Save' %>
<% end %>
