<div>
  <a class="btn btn-primary" href="<%= new_club_member_path(@club) %>"><%= I18n.t('members.new') %></a>

  <div class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= @group.name %>
    </a>
    <ul class="dropdown-menu">
      <% @club.groups.each do |group| %>
        <li>
          <%= link_to group.name, club_members_path(@club, group_id: group.id), class: 'dropdown-item' %>
        </li>
      <% end %>
    </ul>
  </div>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <% @members.each do |member| %>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="<%= member.last_name.parameterize  %>-tab" data-bs-toggle="tab" data-bs-target="#<%= member.last_name.parameterize  %>" type="button" role="tab" aria-controls="<%= member.last_name %>" aria-selected="true">
          <span class="dot-<%= member.status %>"></span>
          <%= "#{member.first_name.first}. #{member.last_name}" %>
        </button>
      </li>
    <% end %>
  </ul>
  <div class="tab-content" id="myTabContent">
    <% @members.each do |member| %>
      <div class="tab-pane fade show" id="<%= member.last_name.parameterize  %>" role="tabpanel" aria-labelledby="<%= member.last_name.parameterize  %>-tab">
        <%= render member, club: @club, member: member %>
      </div>
    <% end %>
  </div>
</div>
