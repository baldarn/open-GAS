<div class="row">
  <ul class="nav justify-content-end">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <%= @group&.name || I18n.t('groups.select') %>
      </a>
      <ul class="dropdown-menu">
        <% @club.groups.each do |group| %>
          <li>
            <%= link_to group.name, club_members_dashboard_path(@club, group_id: group.id, tag_id: @tag&.id), class: 'dropdown-item' %>
          </li>
        <% end %>
      </ul>
      <li>
        <%= link_to I18n.t('members.new'), new_club_member_path(@club), class: 'btn btn-primary' %>
      </li>
    </li>
  </ul>
</div>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <% @members.each do |member| %>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="<%= member.last_name.parameterize  %>-tab" data-bs-toggle="tab" data-bs-target="#<%= member.last_name.parameterize  %>" type="button" role="tab" aria-controls="<%= member.last_name %>" aria-selected="true">
        <span class="dot-<%= member.status %>"></span>
        <%= "#{member.first_name.first}. #{member.last_name}" %>
      </button>
    </li>
  <% end %>
</ul>
<div class="tab-content" id="myTabContent">
  <% @members.each do |member| %>
    <div class="tab-pane fade show" id="<%= member.last_name.parameterize  %>" role="tabpanel" aria-labelledby="<%= member.last_name.parameterize  %>-tab">
      <%= render 'member_dashboard', club: @club, member: member %>
    </div>
  <% end %>
</div>
</div>
